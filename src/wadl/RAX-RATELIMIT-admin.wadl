<!-- Import Common XML Entities -->
<!-- -->
<!-- You can resolve the entites with xmllint -->
<!-- -->
<!-- xmllint -noent RAX-KSQA-admin.wadl -->
<!--*******************************************************-->
<!DOCTYPE application [
<!ENTITY % common SYSTEM "../common/common.ent">
%common;
]>
<application xmlns="http://wadl.dev.java.net/2009/02"
    xmlns:wadl="http://wadl.dev.java.net/2009/02"
    xmlns:identity="http://docs.openstack.org/identity/api/v2.0"
    xmlns:capi="http://docs.openstack.org/common/api/v1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:xsdxt="http://docs.rackspacecloud.com/xsd-ext/v1.0"
    xsi:schemaLocation="http://docs.openstack.org/identity/api/v2.0 ../common/xsd/api.xsd
    http://docs.openstack.org/common/api/v1.0 ../common/xsd/api-common.xsd
    http://wadl.dev.java.net/2009/02 http://www.w3.org/Submission/wadl/wadl.xsd
    ">
    
    <grammars>
        <include href="../common/xsd/api.xsd"/>
        <include href="../common/xsd/api-common.xsd"/>
    </grammars>
    <!--*******************************************************-->
    <!-- All Resources -->
    <!--*******************************************************-->
    
    <!-- We should use SSL in production -->
    <resources base="http://localhost:35357">
        <resource id="version" path="v2.0">
            <param name="X-Auth-Token" style="header" type="xsd:string" required="true">
                <doc>You need a valid admin token for access.</doc>
            </param>
            <resource id="rtadm" path="rtadm">
                <method href="#getRateLimit"/>
                <method href="#updateRateLimit"/>
                <method href="#deleteWhitelistEntry"/>
                <method href="#addWhitelistEntry"/>
                <method href="#replaceWhitelist"/>
            </resource>
        </resource>
    </resources>
    
    <!-- Methods -->
    
    <method id="getRateLimit" name="GET" >
        <doc xml:lang="EN" title="Get User Rate Limits">
            <p xmlns="http://www.w3.org/1999/xhtml" class="shortdesc">Get rate limits for a user.</p>
        </doc>
        <response status="200 203">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../common/samples/ratelimit-list1user-response.json"/>
                </doc>
            </representation>
        </response>
        &commonFaults;
        &getFaults;
    </method>
    
    <method id="updateRateLimit" name="POST">
        <doc xml:lang="EN" title="Update User Rate Limits">
            <p xmlns="http://www.w3.org/1999/xhtml" class="shortdesc">Update rate limits for a user.</p>
        </doc>
        <request>
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../common/samples/ratelimit-update1user-request.json"/>
                </doc>
            </representation>
        </request>
        <response status="200">
        </response>
        &commonFaults;
        &postPutFaults;
    </method>
    
    <method id="deleteWhitelistEntry" name="DELETE">
        <doc xml:lang="EN" title="Delete Entry from Rate Limit Whitelist">
            <p xmlns="http://www.w3.org/1999/xhtml" class="shortdesc">Remove specified entry from the whitelist.</p>
        </doc>
        <doc>
            <p xmlns="http://www.w3.org/1999/xhtml">
                If an entry in the whitelist matches any of the comma-delimited values specified for <code>keys</code>, 
                that entry will be removed from the whitelist.
                For example, <code>/rtadm?keys=10.5.55.108,Alex</code> requests removal from the whitelist 
                of all entries associated with IP address <code>10.5.55.108</code> or userID <code>Alex</code>.
            </p>
        </doc>
        <request>
            <param name="keys" style="query" required="true" type="xsd:string">
                <doc xml:lang="EN">
                    <p xmlns="http://www.w3.org/1999/xhtml">
                        Identify which entry to remove.
                    </p>
                </doc>
            </param>
        </request>
        <response status="200">
        </response>
        &commonFaults;
    </method>
    
    <method id="addWhitelistEntry" name="POST">
        <doc xml:lang="EN" title="Add Entry to Rate Limit Whitelist">
            <p xmlns="http://www.w3.org/1999/xhtml" class="shortdesc">Append one entry to the whitelist.</p>
        </doc>
        <request>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../common/samples/ratelimit-whitelist1user-request.xml"/>
                </doc>
            </representation>
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code href="../common/samples/ratelimit-whitelist1user-request.json"/>
                </doc>
            </representation>
        </request>
        <response status="200">
        </response>
        &commonFaults;
        &postPutFaults;
    </method>
    
    <method id="replaceWhitelist" name="PUT">
        <doc xml:lang="EN" title="Replace Rate Limit Whitelist">
            <p xmlns="http://www.w3.org/1999/xhtml" class="shortdesc">Replace the entire whitelist.</p>
        </doc>
        <request>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code href="../common/samples/ratelimit-whitelist-replace-all-request.xml"/>
                </doc>
            </representation>
        </request>
        <response status="200">
        </response>
        &commonFaults;
        &postPutFaults;
    </method>
    
</application> 